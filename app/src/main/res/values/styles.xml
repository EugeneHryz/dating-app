<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="Button.Secondary" parent="AppTheme">
        <item name="colorPrimary">@color/md_theme_light_secondary</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="TextSize18">
        <item name="android:textSize">@dimen/text_size_18</item>
<!--        <item name="android:textColor">@android:color/tab_indicator_text</item>-->
    </style>

    <style name="AppTheme.ActionBar.Light" parent="Widget.Material3.Toolbar.OnSurface">
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
<!--        <item name="android:textColorPrimaryInverse">@android:color/white</item>-->
<!--        <item name="iconTint">@color/md_theme_light_onPrimary</item>-->
<!--        <item name="android:titleTextStyle">@color/md_theme_light_onPrimary</item>-->
<!--        <item name="android:titleTextColor">@color/md_theme_light_onPrimary</item>-->
    </style>

    <style name="ShapeAppearance.App.Fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/fab_corner_radius</item>
    </style>

    <style name="TextMessage">
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextMessage.Time">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextMessage.Date">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>