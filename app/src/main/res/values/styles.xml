<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Button.Secondary" parent="AppTheme">
        <item name="colorPrimary">@color/md_theme_light_secondary</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="TextSize16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextSize16.Gray">
        <item name="android:textColor">@color/md_theme_dark_outline</item>
    </style>

    <style name="TextSize18">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="TextSize18.Gray">
        <item name="android:textColor">@color/md_theme_dark_outline</item>
    </style>

    <style name="TextSize20">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="TextSize20.Gray">
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
    </style>

    <style name="TextSize22">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>
    </style>

    <style name="TextSize22.Gray">
        <item name="android:textColor">@color/md_theme_dark_outline</item>
    </style>

    <style name="Widget.PrimaryActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:backgroundStacked">?attr/colorPrimary</item>
        <item name="android:backgroundSplit">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="subtitleTextColor">@color/md_theme_light_secondaryContainer</item>
        <item name="colorControlNormal">@color/md_theme_light_onPrimary</item>
    </style>



<!--    <style name="TextSize26">-->
<!--        <item name="android:textSize">@dimen/text_size_22</item>-->
<!--        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>-->
<!--    </style>-->

    <style name="Seekbar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:thumbTint">@color/md_theme_light_primary</item>
        <item name="android:progressTint">@color/theme_light_icon_color</item>
    </style>

    <style name="ShapeAppearance.App.Fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/fab_corner_radius</item>
    </style>

    <style name="UnreadMessagesNumberText">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/md_theme_light_background</item>
    </style>

    <style name="TextMessage">
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextMessage.Timestamp">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextMessage.Date">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>